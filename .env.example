IDLE_ACTIVITY_INTERVAL=60000        # 1 minuto - Actividad intensiva cuando idle
MAX_IDLE_TIME=30000                 # 30 segundos - Tiempo para considerar sistema idle

# Session Thresholds - CONSERVADORES
SESSION_CHECK_INTERVAL=300000       # 5 minutos - Verificación de salud
PROACTIVE_LOGIN_THRESHOLD=900000    # 15 minutos - Renovar token antes de expirar (más conservador)

# Logging
LOG_LEVEL=info
LOG_FILE=logs/scraper.log