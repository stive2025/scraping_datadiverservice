DATADIVERSERVICE_PASS=SEFILSA.G3

# Server Configuration
PORT=3030
NODE_ENV=production

# Puppeteer Configuration - OPTIMIZADO
MAX_CONCURRENT_PAGES=6              # Reducido para mejor estabilidad
PAGE_POOL_SIZE=4                    # Reducido para mejor gestión de memoria
QUEUE_TIMEOUT=45000

# Session Management - OPTIMIZADO PARA ACTIVIDAD AUTOMÁTICA INTELIGENTE
